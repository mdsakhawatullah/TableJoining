@model InternshipTask.Models.StudentView
@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-5">
    <div class="row">

        <!-- Student Information -->
        <div class="col-md-9">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">@Model.StudentName</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Class:</dt>
                        <dd class="col-sm-8">@Model.ClassName</dd>

                        <dt class="col-sm-4">Gender:</dt>
                        <dd class="col-sm-8">@(Model.Gender ==1 ? "Male": "Female")</dd>

                        <dt class="col-sm-4">Date of Birth:</dt>
                        <dd class="col-sm-8">@Model.DOB.ToString("yyyy-MM-dd")</dd>

                       
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@*  Include Bootstrap Icons for better button visuals  *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">