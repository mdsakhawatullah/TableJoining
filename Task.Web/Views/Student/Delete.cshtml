@model InternshipTask.Models.StudentView
@{
    ViewData["Title"] = "Delete Info";
}

<div class="container mt-5">
    <!-- Delete Confirmation Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <!-- Card Header -->
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete
                    </h4>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <!-- Alert Message -->
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">Are you sure, you want to delete this book?</h4>
                        <p>Once deleted, this action cannot be undone.</p>
                    </div>

                    <!--  Details -->
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.StudentName</dd>

                        <dt class="col-sm-4">Gender:</dt>
                        <dd class="col-sm-8">@(Model.Gender == 1 ? "Male": "Female")</dd>

                        <dt class="col-sm-4">Class:</dt>
                        <dd class="col-sm-8">@Model.ClassName</dd>

                        <dt class="col-sm-4">Date of Birth:</dt>
                        <dd class="col-sm-8">@Model.DOB.ToString("yyyy-MM-dd")</dd>

                    </dl>
                </div>

                <!-- Card Footer with Actions -->
                <div class="card-footer d-flex justify-content-end">
                    <form asp-action="Delete" asp-controller="Student" method="post" class="me-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </form>
                    <a asp-action="Index" asp-controller="Student" class="btn btn-secondary">
                        <i class="bi bi-x-circle-fill"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">